{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#2c5aa0",
          "name": "プライマリ"
        },
        {
          "slug": "secondary",
          "color": "#f39c12",
          "name": "セカンダリ"
        },
        {
          "slug": "text",
          "color": "#333333",
          "name": "テキスト"
        },
        {
          "slug": "text-light",
          "color": "#666666",
          "name": "テキスト（薄）"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "背景"
        },
        {
          "slug": "background-light",
          "color": "#f8f9fa",
          "name": "背景（薄）"
        },
        {
          "slug": "accent",
          "color": "#e74c3c",
          "name": "アクセント"
        },
        {
          "slug": "success",
          "color": "#27ae60",
          "name": "成功"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', Meiryo, sans-serif",
          "slug": "system",
          "name": "システムフォント"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "小"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "中"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "大"
        },
        {
          "slug": "x-large",
          "size": "1.75rem",
          "name": "特大"
        },
        {
          "slug": "xx-large",
          "size": "2.5rem",
          "name": "超特大"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.8"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--secondary)"
          }
        },
        "border": {
          "radius": "4px"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "2rem",
            "bottom": "1rem",
            "left": "2rem"
          }
        }
      }
    },
    "blocks": {
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "ヘッダー",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "フッター",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "page-studio",
      "title": "スタジオ詳細",
      "postTypes": ["page", "studio_room"]
    },
    {
      "name": "page-pricing",
      "title": "料金表",
      "postTypes": ["page"]
    },
    {
      "name": "page-access",
      "title": "アクセス",
      "postTypes": ["page"]
    }
  ]
}
