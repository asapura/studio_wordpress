{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": true,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "base",
          "color": "#f9fafb",
          "name": "ベース"
        },
        {
          "slug": "contrast",
          "color": "#ffffff",
          "name": "コントラスト"
        },
        {
          "slug": "contrast-2",
          "color": "#6b7280",
          "name": "コントラスト2"
        },
        {
          "slug": "primary",
          "color": "#2563eb",
          "name": "プライマリ"
        },
        {
          "slug": "primary-dark",
          "color": "#1e40af",
          "name": "プライマリ（濃）"
        },
        {
          "slug": "primary-light",
          "color": "#60a5fa",
          "name": "プライマリ（薄）"
        },
        {
          "slug": "secondary",
          "color": "#f59e0b",
          "name": "セカンダリ"
        },
        {
          "slug": "secondary-dark",
          "color": "#d97706",
          "name": "セカンダリ（濃）"
        },
        {
          "slug": "accent",
          "color": "#10b981",
          "name": "アクセント"
        },
        {
          "slug": "accent-danger",
          "color": "#ef4444",
          "name": "アクセント（危険）"
        },
        {
          "slug": "text",
          "color": "#1f2937",
          "name": "テキスト"
        },
        {
          "slug": "text-light",
          "color": "#6b7280",
          "name": "テキスト（薄）"
        },
        {
          "slug": "text-lighter",
          "color": "#9ca3af",
          "name": "テキスト（さらに薄）"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #2563eb 0%, #1e40af 100%)",
          "name": "プライマリグラデーション"
        },
        {
          "slug": "secondary-gradient",
          "gradient": "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)",
          "name": "セカンダリグラデーション"
        },
        {
          "slug": "vivid-cyan-blue-to-vivid-purple",
          "gradient": "linear-gradient(135deg,#667eea 0%,#764ba2 100%)",
          "name": "ビビッドシアンブルーからビビッドパープル"
        },
        {
          "slug": "light-gradient",
          "gradient": "linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%)",
          "name": "ライトグラデーション"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', 'Yu Gothic', Meiryo, sans-serif",
          "slug": "system",
          "name": "システムフォント"
        },
        {
          "fontFamily": "'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', 'Yu Gothic', Meiryo, sans-serif",
          "slug": "japanese",
          "name": "日本語フォント"
        }
      ],
      "fontSizes": [
        {
          "slug": "x-small",
          "size": "0.75rem",
          "name": "極小"
        },
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "小"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "中"
        },
        {
          "slug": "large",
          "size": "1.125rem",
          "name": "大"
        },
        {
          "slug": "x-large",
          "size": "1.375rem",
          "name": "特大"
        },
        {
          "slug": "xx-large",
          "size": "1.75rem",
          "name": "超特大"
        },
        {
          "slug": "xxx-large",
          "size": "2.5rem",
          "name": "超超特大"
        },
        {
          "slug": "huge",
          "size": "3.5rem",
          "name": "巨大"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingSizes": [
        {
          "slug": "10",
          "size": "0.25rem",
          "name": "10"
        },
        {
          "slug": "20",
          "size": "0.5rem",
          "name": "20"
        },
        {
          "slug": "30",
          "size": "1rem",
          "name": "30"
        },
        {
          "slug": "40",
          "size": "1.5rem",
          "name": "40"
        },
        {
          "slug": "50",
          "size": "2rem",
          "name": "50"
        },
        {
          "slug": "60",
          "size": "2.5rem",
          "name": "60"
        },
        {
          "slug": "70",
          "size": "3rem",
          "name": "70"
        },
        {
          "slug": "80",
          "size": "4rem",
          "name": "80"
        },
        {
          "slug": "90",
          "size": "5rem",
          "name": "90"
        },
        {
          "slug": "100",
          "size": "6rem",
          "name": "100"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1280px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "custom": {
      "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem",
        "2xl": "4rem"
      },
      "radius": {
        "sm": "0.375rem",
        "md": "0.5rem",
        "lg": "0.75rem",
        "xl": "1rem"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--contrast)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "fontWeight": "400",
      "lineHeight": "1.7"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "var(--wp--custom--spacing--md)",
        "bottom": "0",
        "left": "var(--wp--custom--spacing--md)"
      },
      "blockGap": "var(--wp--custom--spacing--lg)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--contrast)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        },
        "border": {
          "radius": "var(--wp--custom--radius--md)"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "800",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "700",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--sm)"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--sm)"
          }
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--text)"
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--lg)",
            "bottom": "var(--wp--custom--spacing--lg)"
          }
        }
      },
      "core/columns": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--lg)"
          }
        }
      },
      "core/column": {
        "spacing": {
          "padding": {
            "top": "0",
            "right": "var(--wp--custom--spacing--sm)",
            "bottom": "0",
            "left": "var(--wp--custom--spacing--sm)"
          }
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "core/cover": {
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--2xl)",
            "right": "var(--wp--custom--spacing--md)",
            "bottom": "var(--wp--custom--spacing--2xl)",
            "left": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "core/button": {
        "border": {
          "radius": "var(--wp--custom--radius--md)"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      },
      "core/buttons": {
        "spacing": {
          "blockGap": "var(--wp--custom--spacing--md)"
        }
      },
      "core/separator": {
        "color": {
          "text": "var(--wp--preset--color--contrast-2)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "left": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "core/quote": {
        "border": {
          "width": "0 0 0 4px",
          "style": "solid",
          "color": "var(--wp--preset--color--primary)"
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--custom--spacing--md)"
          }
        }
      },
      "core/table": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--lg)",
            "bottom": "var(--wp--custom--spacing--lg)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "ヘッダー",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "フッター",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "page-studio",
      "title": "スタジオ詳細",
      "postTypes": ["page", "studio_room"]
    },
    {
      "name": "page-pricing",
      "title": "料金表",
      "postTypes": ["page"]
    },
    {
      "name": "page-access",
      "title": "アクセス",
      "postTypes": ["page"]
    },
    {
      "name": "blank",
      "title": "空白ページ（ブロックエディター完全版）",
      "postTypes": ["page", "post"]
    }
  ]
}
